<div class="factory">
    <div>
        @if (Self.Status == Store.Factory.FactoryStatus.Online)
        {
            <button class="btn btn-warning btn-sm" @onclick="@() => Self.Status = Store.Factory.FactoryStatus.Offline">On</button>
        }
        else
        {
            <button class="btn btn-success btn-sm" @onclick="@() => Self.Status = Store.Factory.FactoryStatus.Online">Off</button>
        }
    </div>
    <table>
        <tr>
            <td>Type:</td>
            <td>
                @{ var list = Enum.GetValues(typeof(Store.Factory.FactoryType)).Cast<Store.Factory.FactoryType>(); }
                <Dropdown TItem="Store.Factory.FactoryType" OnSelected="@OnSelected">
                    <InitialTip>@Self.Type</InitialTip>
                    <ChildContent>
                        @foreach (var type in list)
                        {
                            <DropdownListItem Item="@type">@type</DropdownListItem>
                        }
                    </ChildContent>
                </Dropdown>
            </td>
        </tr>
        <tr>
            <td>Storage:</td>
            <td>
                @Self.InternalStorage p/t
                <button class="btn btn-outline-info btn-sm" @onclick="Make">Make</button>
            </td>
        </tr>
        <tr>
            <td>Throughput:</td>
            <td> @Self.Throughput</td>
        </tr>
        <tr>
            <td>Employees</td>
            <td>
                @Self.EmployeeCount
                <button class="btn btn-outline-success btn-sm" @onclick="HireEmployee">+</button>
                <button class="btn btn-outline-danger btn-sm" @onclick="DismissEmployee">-</button>
            </td>
        </tr>
    </table>
</div>

@code{

    void OnSelected(Store.Factory.FactoryType selection)
    {
        Self.Type = selection;
    }

    void Make()
    {
        Self.Make();
    }

    void HireEmployee()
    {
        Self.HireEmployee();
    }

    void DismissEmployee()
    {
        Self.DismissEmployee();
    }

    [Parameter]
    public Store.Factory Self { get; set; }

}